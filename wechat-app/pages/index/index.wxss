/*index.wxss*/
.slide{
  margin: 0rpx 10rpx 0rpx 10rpx;
  border-radius: 6px; 
  height: 150px;
}
.slide-image {
  width: 100%;
  height: 100%;
  border-radius: 6px; 
}

.content {
  display: flex;
  flex-flow: row nowrap;
  margin: 10rpx 0rpx 10rpx 0rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.content-box{
  text-align: center;
  background-color: #fff;
  flex-grow: 1;
  flex-basis: 0;
  margin: 0rpx 5rpx 0rpx 5rpx;
  padding-top: 10rpx;
  height:160rpx;
}

.imgBox {
  width: 100rpx;
  height:100rpx;
}

.text_line{
  text-align: center;
  color: #999;
  width: 100%;
}

.article {
  margin: 10rpx 30rpx 10rpx 30rpx;
  background-color: #fff;
  height: 210px;
  border-radius: 6px;
}

.article_img{
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
  width: 100%;
  height: 150px;
}

.article_line{
  margin-left: 20rpx;
  width: 100%;
}

.article_content{
  margin-left: 20rpx;
  font-size: 14px;
  color: #999;
  width: 100%;
}