<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wechat.recycle.mapper.ResDetailMapper">

    <select id="selectOne" resultType="com.wechat.recycle.entity.User">
        select * from `user` where id = #{id}
    </select>

    <select id="selectByOpenid" resultType="com.wechat.recycle.entity.User">
        select id,openid,mobile,email,nick_name,real_name,address,role_type from `user` where openid = #{openid}
    </select>

